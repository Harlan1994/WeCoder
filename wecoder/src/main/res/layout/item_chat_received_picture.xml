<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="13dp">

    <TextView
        android:id="@+id/timestamp"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_chat_activity">

        <com.harlan.jxust.ui.view.imageview.SuperImageView
            android:id="@+id/siv_avatar"
            android:layout_width="@dimen/size_avatar"
            android:layout_height="@dimen/size_avatar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin_chat_activity"
            android:scaleType="fitXY"
            android:src="@drawable/default_hd_avatar" />

        <RelativeLayout
            android:id="@+id/row_recv_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_chat_activity"
            android:layout_toRightOf="@id/siv_avatar">

            <com.harlan.jxust.ui.view.imageview.SuperImageView
                android:id="@+id/siv_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="350dp"
                android:maxWidth="250dp"
                android:background="@drawable/chatfrom_bg"
                android:scaleType="fitCenter"
                android:src="@drawable/default_avatar"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>